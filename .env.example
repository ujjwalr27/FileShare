# Backend Environment Variables
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# Supabase Storage (for permanent file storage)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your-service-role-key-here
USE_SUPABASE_STORAGE=true

# JWT
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# Upload (temp directory for multer)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# CORS (Comma-separated for multiple origins, e.g., https://app1.vercel.app,https://app2.vercel.app)
CORS_ORIGIN=https://your-app.vercel.app

# ML Service (Set to your Render ML service URL)
ML_SERVICE_URL=https://fileshare-ml-service.onrender.com
ML_SERVICE_ENABLED=true
